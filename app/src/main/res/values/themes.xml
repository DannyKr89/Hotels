<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Hotels" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Hotels" parent="Base.Theme.Hotels" />

    <style name="My.Chips" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">#828796</item>
        <item name="chipBackgroundColor">#FBFBFC</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">5dp</item>
    </style>

    <style name="My.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
                <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#0D72FF</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="My.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center</item>
    </style>

